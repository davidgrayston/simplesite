{
    "name": "drupal/simplesite",
    "description": "SimpleSite installation profile.",
    "type": "drupal-profile",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin/"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "docroot/core": [
                "drupal/core"
            ],
            "modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "themes/{$name}": [
                "type:drupal-theme"
            ]
        }
    },
    "require": {
        "drupal/core": "^8.1.0",
        "drupal/bootstrap": "^8.3.0"
    }
}
